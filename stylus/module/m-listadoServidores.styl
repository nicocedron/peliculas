.servidor
	>ul
		margin 0
		padding 0
		list-style none
		text-align center
		>li
			padding 0
			margin 0
			width 80%
			margin 20px auto
			background #333
			padding 5px 0
			position relative
			clearfix()

			+media(400px)
				width 40%
				display inline-block
				vertical-align top
				margin 20px 2%
			div,a
				float left
				width 50%
				font-size 1.6em
				border-top 1px solid #000
				padding 10px 0
				display block


				img
					vertical-align top

			.link
				width 100%
				border-top none
				display block
				color #fff
				text-decoration none
				position relative
				border-right 0

				span
					display block
					text-transform uppercase
					margin 5px 0

					img
						margin-right 10px
				.icon-play
					position absolute
					padding 15px 
					left 0
.listado
	>ul
		margin 0
		padding 0
		list-style none
		text-align center
		>li
			padding 0
			margin 0
			width 80%
			margin 20px auto
			background #333
			padding-top 5px
			position relative
			clearfix()
			+media(400px)
				width 40%
				display inline-block
				vertical-align top
				margin 20px 2%
			.image
				text-align center
				position relative
				display block
				text-decotarion none
				img
					max-width 214px
					border 0
					width 100%

				.play
					color #fff
					position absolute
					top 50%
					left 50%
					background #000
					background rgba(0,0,0,0.7)
					margin-left -20px
					margin-top -20px
					font-size 2em
					width 40px
					height 40px
					border-radius 20px
					padding-top 10px
					padding-left 4px

			.title
				background #000
				font-size 2em
				color #fff
				padding 5px 10px
				font-family Roboto
				font-weight 300
				text-align center
				margin-bottom 10px

			.data
				position absolute
				bottom 0
				width 100%
				background #000
				background rgba(0,0,0,0.5)
				text-align left
				ul
					list-style none
					margin 0
					padding 5px
					clearfix()

					li
						font-family Roboto
						font-size 1.4em
						padding 3px 0
						position relative
						&:last-child
							float right
							width auto
							right 0
							position absolute
							top 0

							.tx1
								display block
								text-align center
						.tx1
							margin-right 3px
							&:after
								content ":"
								margin-left 1px
						.calidad
							font-size 1.8em
							font-weight 300
							color #4CCE0E
							text-transform uppercase

						.genero
							max-width 40%
							text-overflow ellipsis
							white-space nowrap
							overflow hidden
							display inline-block
							vertical-align top
						img
							vertical-align middle	
							margin 0 3px
							max-width 20px
